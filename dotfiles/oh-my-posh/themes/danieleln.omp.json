{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "osc99": true,
    "version": 2,

    "palettes": {
        "template": "{{ if eq .Env.OMP_PALETTE \"fluorescent\" }}fluorescent{{ else if eq .Env.OMP_PALETTE \"solarizedDark\" }}solarizedDark{{ else }}default{{ end }}",
        "list": {
            "fluorescent": {
                "failure":   "#EE3148",
                "success":   "#3fb350",
                "time":      "#18b6ec",
                "primary":   "#666666",
                "secondary": "#3b3b3b",
                "tertiary":  "#f7f7f7",
                "accent-1":  "#F89A0F",
                "accent-2":  "#EA5521"
            },

            "solarizedDark": {
                "failure":   "#DC322F",
                "success":   "#859900",
                "time":      "#268BD2",
                "primary":   "#839496",
                "secondary": "#586E75",
                "tertiary":  "#EEE8D5",
                "accent-1":  "#B58900",
                "accent-2":  "#CB4B16"
            },
    
            "default": {
                "failure":   "red",
                "success":   "cyan",
                "time":      "blue",
                "primary":   "default",
                "secondary": "default",
                "tertiary":  "default",
                "accent-1":  "yellow",
                "accent-2":  "lightRed"
            }
        }
    },

    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "exit",
                    "template": "{{ if gt .Code 0 }}\uebe6 {{ .Code }}<p:primary> on</>{{ else }}\ueab2 <p:primary>on</>{{ end }}",
                    "properties": {
                        "always_enabled": true
                    },

                    "style": "plain",

                    "foreground_templates": [
                        "{{ if gt .Code 0 }}p:failure{{ else }}p:success{{ end }}"
                    ]
                },
                {
                    "type": "time",
                    "template": " {{ .CurrentDate | date .Format }}",
                    "properties": {
                        "time_format": "Mon"
                    },
        
                    "style": "plain",

                    "background": "parentBackground",
                    "foreground": "p:time"
                },
                {
                    "type": "text",
                    "template": ",",

                    "style": "plain",

                    "background": "parentBackground",
                    "foreground": "p:primary"
                },
                {
                    "type": "time",
                    "template": " {{ .CurrentDate | date .Format }}",
                    "properties": {
                        "time_format": "Jan 2"
                    },
        
                    "style": "plain",
                    
                    "background": "parentBackground",
                    "foreground": "p:time"
                },
                {
                    "type": "text",
                    "template": " at",

                    "style": "plain",

                    "background": "parentBackground",
                    "foreground": "p:primary"
                },
                {
                    "type": "time",
                    "template": " {{ .CurrentDate | date .Format }} ",
                    "properties": {
                        "time_format": "15:04:05"
                    },
        
                    "style": "plain",

                    "background": "parentBackground",
                    "foreground": "p:time"
                }
            ]
        },



        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "session",
                    "template": " <b>{{ .UserName }}</b><p:primary>@</>{{ .HostName }}",

                    "style": "diamond",
                    "leading_diamond": "<p:secondary>\u250c\u2500</>",

                    "foreground": "p:accent-1"
                },
                {
                    "type": "path",
                    "template": " <p:primary>in</> {{ .Path }}",
                    "properties": {
                        "style": "folder",
                        "folder_separator_icon": "/",
                        "max_depth": 1
                    },

                    "style": "plain",

                    "background": "parentBackground",
                    "foreground": "p:accent-2"
                },
                {
                    "type": "git",
                    "template": "{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uF044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uF046 {{ .Staging.String }}{{ end }}",
                    "properties": {
                        "branch_icon": " \ue725 ",
                        "fetch_status": true,
                        "fetch_upstream_icon": false
                    },

                    "style": "plain",

                    "foreground": "p:primary",
                    "foreground_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#c5e478{{ end }}",
                        "{{ if gt .Ahead 0 }}#C792EA{{ end }}",
                        "{{ if gt .Behind 0 }}#C792EA{{ end }}"
                    ]
                }
            ]
        },



        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "template": "<p:secondary>\u2514</> <p:tertiary>ï¬¦</>",

                    "style": "plain",

                    "foreground": "p:secodary"
                }
            ]
        }
    ],

    
    "console_title_template": "{{ .UserName }}@{{ .HostName }}",
    "final_space": true
}
