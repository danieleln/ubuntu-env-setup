{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "osc99": true,
    "version": 2,

    "palettes": {
        "template": "default",
        "list": {
            "default": {
                "lambda":           "#FFCC5C",

                "main":             "#e4e2e0",
                "lowContrast":      "#88827e",

                "workingDir":       "#b6aea9",

                "gitCommitted":     "#b6aea9",
                "gitWorking":       "#40bbe3",
                "gitStaging":       "#3ba188",

                "exitCodeSuccess":  "#3ba188",
                "exitCodeFailure":  "#c94343"
            }
        }
    },

    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "exit",
                    "template": "{{ if gt .Code 0 }}\uebe6 {{ .Code }} <p:lowContrast>\ue0b1</> {{ end }}",
                    "properties": {
                        "always_enabled": true
                    },

                    "style": "plain",

                    "foreground_templates": [
                        "{{ if gt .Code 0 }}p:exitCodeFailure{{ else }}p:exitCodeSuccess{{ end }}"
                    ]
                },
                {
                    "type": "text",
                    "template": "<b>ï¬¦</>",

                    "style": "plain",

                    "foreground": "p:lambda"
                },
                {
                    "type": "path",
                    "template": " {{ .Path }}",
                    "properties": {
                        "style": "agnoster_short",
                        "folder_separator_icon": "/",
                        "folder_icon": "\uf101",
                        "max_depth": 2
                    },

                    "style": "plain",

                    "background": "parentBackground",
                    "foreground": "p:workingDir"
                },
                {
                    "type": "git",
                    "template": "{{ .HEAD }}",
                    "properties": {
                        "branch_icon": " \ue725 ",
                        "fetch_status": true,
                        "fetch_upstream_icon": false
                    },

                    "style": "plain",

                    "foreground": "p:gitCommitted",
                    "foreground_templates": [
                        "{{ if .Working.Changed }}p:gitWorking{{ end }}",
                        "{{ if .Staging.Changed }}p:gitStaging{{ end }}"
                    ]
                },
                {
                    "type": "text",
                    "template": " \ue0b1",

                    "style": "plain",
                    "foreground": "p:lowContrast"
                }
            ]
        }
    ],

    
    "console_title_template": "{{ .UserName }}@{{ .HostName }}",
    "final_space": true
}
